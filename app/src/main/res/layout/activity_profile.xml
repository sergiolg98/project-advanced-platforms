<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".views.activities.InfoActivity"
    tools:background="@android:color/black">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20sp"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/tx_title_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Mi Perfil"
                android:textColor="#DDD"
                android:textSize="28sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tx_full_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20sp"
                tools:text="Sergio Laureano GutiÃ©rrez"
                android:textColor="#DDD" />

            <TextView
                android:id="@+id/tx_username"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20sp"
                tools:text="slaureano"
                android:textColor="#DDD" />

            <TextView
                android:id="@+id/tx_mail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20sp"
                tools:text="slaureano@unsa.edu.pe"
                android:textColor="#DDD" />



        </LinearLayout>
    </ScrollView>

</LinearLayout>