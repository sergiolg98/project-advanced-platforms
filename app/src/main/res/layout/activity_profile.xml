<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".views.activities.InfoActivity"
    tools:background="@android:color/black">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20sp"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20sp"
                app:srcCompat="@drawable/profile_icon" />

            <TextView
                android:id="@+id/tx_username"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20sp"
                android:textAlignment="center"
                android:textColor="#DDD"
                android:textSize="18sp"
                android:textStyle="bold"
                tools:text="slaureano" />

            <TextView
                android:id="@+id/tx_title_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="35sp"
                android:text="Información"
                android:textColor="#DDD"
                android:textSize="28sp"
                android:textStyle="bold" />

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="25sp">

                <ImageView
                    android:id="@+id/imageView3"
                    android:layout_width="50sp"
                    android:layout_height="50sp"
                    app:srcCompat="@drawable/icon_user_full_name" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10sp"
                    android:layout_gravity="center_vertical"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="#DDD"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:text="Nombres Completos" />

                    <TextView
                        android:id="@+id/tx_full_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="#DDD"
                        tools:text="Sergio Laureano Gutiérrez" />
                </LinearLayout>

            </TableRow>


        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20sp">

            <ImageView
                android:layout_width="50sp"
                android:layout_height="50sp"
                app:srcCompat="@drawable/icon_user_email" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10sp"
                android:layout_gravity="center_vertical"
                android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="#DDD"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:text="Correo Electrónico" />
                    <TextView
                        android:id="@+id/tx_mail"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        tools:text="slaureano@unsa.edu.pe"
                        android:textColor="#DDD" />
            </LinearLayout>

        </TableRow>



            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20sp">

                <ImageView
                    android:layout_width="50sp"
                    android:layout_height="50sp"
                    app:srcCompat="@drawable/icon_user_date" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10sp"
                    android:layout_gravity="center_vertical"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="#DDD"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:text="Fecha de Registro" />
                    <TextView
                        android:id="@+id/tx_date_registered"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        tools:text="13 de junio del 2020"
                        android:textColor="#DDD" />
                </LinearLayout>

            </TableRow>



        </LinearLayout>
    </ScrollView>

</LinearLayout>