<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/black"
    android:layout_marginBottom="15sp"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/img_photo"
        android:layout_width="match_parent"
        android:layout_height="215sp"
        app:srcCompat="@mipmap/ic_launcher" />

    <TextView
        android:id="@+id/tx_username_gotten"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20sp"
        android:layout_marginTop="8sp"
        android:text="*slaureano"
        android:textColor="#DDD"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tx_description_gotten"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20sp"
        android:text="Un amigo necesita de  personas maravillosas para poder triunfar en la vida"
        android:textColor="#DDD" />

</LinearLayout>