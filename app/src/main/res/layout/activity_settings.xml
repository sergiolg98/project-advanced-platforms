<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".views.activities.SettingsActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="20sp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/tx_title_settings"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Ajustes"
                android:textSize="28sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/bt_adjust_rase_to_wake"
                android:layout_width="match_parent"
                android:layout_height="200sp"
                app:srcCompat="@drawable/raise_off" />

            <ImageView
                android:id="@+id/bt_automatic_adjust_bright"
                android:layout_width="match_parent"
                android:layout_height="200sp"
                app:srcCompat="@drawable/light_setting_off" />

        </LinearLayout>
    </ScrollView>


</RelativeLayout>